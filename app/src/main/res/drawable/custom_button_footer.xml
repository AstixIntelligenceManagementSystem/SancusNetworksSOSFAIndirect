<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/prt_color"
                android:endColor="@color/prt_color"
                android:angle="270" 
                
                />
             <stroke
                android:width="1dp"
                android:color="@color/prt_color_border" 
                /> 
            <corners
                android:radius="1dp" />
           <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
           
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#1FB3D4"
                android:startColor="#1FB3D4"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#1FB3D4" /> 
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>

     <item>        
        <shape>
            <gradient
                android:endColor="#303A3E"
                android:startColor="#303A3E"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#303A3E" 
                /> 
            <corners
                android:radius="1dp" />
           <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item> 
</selector>