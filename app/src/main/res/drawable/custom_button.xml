<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#80017ac5"
                android:endColor="#80017ac5"
                android:angle="270"

                />
            <stroke
                android:width="1dp"
                android:color="#80017ac5"
                />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#015db4"
                android:startColor="#015db4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#015db4" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#015db4"
                android:startColor="#015db4"
                android:angle="270" />
            <corners android:radius="5dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#015db4"/>
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>