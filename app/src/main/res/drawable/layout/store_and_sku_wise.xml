<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
<RelativeLayout 
    android:layout_height="46dp" 
    android:layout_width="fill_parent" 
    android:background="#000000"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/rtv_hdr">
    
    <ImageView 
    android:id="@+id/img_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_back"
    android:layout_alignParentLeft="true"/>
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
 	android:layout_centerInParent="true"
    android:gravity="center_horizontal"
      android:shadowRadius="7" 
    android:shadowDy="4" 
    android:shadowDx="4" 
   android:visibility="gone"
    android:shadowColor="#80FFFFFF" 
    android:textSize="16sp"
    android:text="Order Detail"/>

</RelativeLayout>


<RelativeLayout 
    android:id="@+id/ll_schm_applcbl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center"
    android:layout_below="@+id/ll_ctgry"
    android:background="#ffffff"
    android:orientation="horizontal">

   
  
    
</RelativeLayout>

<LinearLayout 
    android:id="@+id/ll_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   android:paddingTop="1dp"
   android:paddingBottom="1dp"
    android:gravity="center_vertical"

    android:layout_below="@+id/ll_schm_applcbl"
    android:background="@drawable/table_cell_header_bg"
    android:orientation="horizontal">

    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Product"
        android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
     <View 
        android:layout_width="1dp"
         android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
     <TextView 
        android:layout_width="0dp"
         android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="MRP"
         android:gravity="center"
          android:textSize="10sp"
        android:textStyle="bold"
         android:textColor="#ffffff"/>
      <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>
      <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Avg. Rate"
         android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
       <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"
           android:visibility="gone"/>
       <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         android:gravity="center"
        android:text="Stock"
        android:textSize="10sp"
        android:textStyle="bold"
           android:visibility="gone"
        android:textColor="#ffffff"/> 
        <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>
            
             <TextView 
           android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Order\nQty"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
              <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>
       <TextView 
           android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Free\nQty"
         android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/> 
      
         <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>
     
             <TextView 
            android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Discount\nValue"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
              <View 
        android:layout_width="1dp"
                  android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
       <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
           android:visibility="gone"
        android:text="ValBefore\nTax"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/> 
         <View 
        android:layout_width="1dp"
             android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
        
          <TextView 
        android:layout_width="0dp"
              android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tax\nValue"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/> 
         <View 
        android:layout_width="1dp"
             android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
        
             <TextView 
        android:layout_width="0dp"
                 android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ValAfter\nTax"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/> 
       
       
  
    
</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/ll_header"
    android:layout_above="@+id/ll_buttons"
    android:layout_marginTop="2dp"
    android:weightSum="1"
   >
             
    <LinearLayout 
   
    android:layout_width="match_parent"
    android:layout_height="0dp"
	android:layout_weight="0.08"
   android:paddingTop="1dp"
   android:paddingBottom="1dp"
    android:gravity="center_vertical"

  
    android:background="#A5D1F3"
    android:orientation="horizontal">


        <View
        android:layout_width="1dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:background="#000000"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:text="Total :"
            android:textColor="#000000"

            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            />

        <TextView
                 android:id="@+id/total_discountValue"
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:paddingRight="2dp"
         android:gravity="right|center_vertical"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
              <View 
        android:layout_width="1dp"
                  android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
       <TextView 
           android:id="@+id/total_ValBeforeTax"
           android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="2dp"
        android:text=""
         android:gravity="right|center_vertical"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"/> 
        
        <View 
        android:layout_width="1dp"
            android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
          <TextView 
               android:id="@+id/total_ValTax"
              android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
         android:gravity="right|center_vertical"
         android:textSize="10sp"
        android:textStyle="bold"
        android:paddingRight="2dp"
        android:textColor="#000000"/> 
        
           <View 
        android:layout_width="1dp"
               android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000000"/>
             <TextView 
                 android:id="@+id/total_ValAfterTax"
        android:layout_width="0dp"
                 android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text=""
        android:paddingRight="2dp"
         android:gravity="right|center_vertical"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"/> 
       
       
  
    
</LinearLayout>
    
  <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="0dp"
   android:clipToPadding="false"
    android:layout_marginTop="1dp"
    
  
    android:layout_weight="0.92"
    android:scrollbarStyle="outsideOverlay">
    <LinearLayout 
        android:id="@+id/ll_Scroll_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
        android:orientation="vertical">
       
        
    </LinearLayout>
</ScrollView>




</LinearLayout>
<LinearLayout 
    android:id="@+id/ll_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:weightSum="3"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:background="#9E9E9E"
    android:orientation="horizontal">
 
  
    
      <Button 
          android:id="@+id/btnfinish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="2dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
         android:gravity="center"
        android:textColor="#ffffff"
        android:text="Back"
        android:visibility="gone"
        android:textSize="14sp"
        android:background="@drawable/button_shadow"/>
       
</LinearLayout>


</RelativeLayout>
