<TextView android:id="@+id/ddAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
       android:textStyle="bold"
          android:maxLength="100"
        android:layout_marginLeft="12dp">        
    </TextView>
    <EditText  
    android:id="@+id/addres"  
    android:layout_height="wrap_content"  
    android:hint="Enter the Address" 
    android:inputType="textFilter"
         android:digits="@string/only_alpha_numeric"
    android:lines="2"  
    android:layout_width="fill_parent">  
</EditText>  

    
    <TextView android:id="@+id/ddPCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pincode"
         android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginLeft="12dp">        
    </TextView>
    <EditText  
    android:id="@+id/pincod"  
    android:layout_height="wrap_content"  
    android:hint="Pincode"
    android:maxLength="6"  
    android:inputType="number"  
    android:visibility="gone"
    android:layout_width="fill_parent"> 
    
</EditText> 

    
    <TextView android:id="@+id/ddSLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:visibility="gone">
        
    </TextView>

<Spinner  
    android:id="@+id/Spinnerlocation"  
    android:layout_height="wrap_content"  
    android:prompt="@string/spinnerloc"  
    android:layout_width="fill_parent" 
    android:visibility="gone" 
   > 
</Spinner>

<TextView android:id="@+id/ddSArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:text="Area"
        android:visibility="gone">
        
    </TextView>

<Spinner  
    android:id="@+id/Spinnerarea"  
    android:layout_height="wrap_content"  
    android:prompt="@string/spinnerarea"  
    android:layout_width="fill_parent"  
    android:visibility="gone">
</Spinner>

<TextView android:id="@+id/ddStype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:text="Store Type"
        android:visibility="gone">
        
    </TextView>


<Spinner  
    android:id="@+id/Spinnerstoretype"  
    android:layout_height="wrap_content"  
    android:prompt="@string/spinnerstore"  
    android:layout_width="fill_parent"
    android:visibility="gone"  
    >  
</Spinner>

<LinearLayout 
    android:id="@+id/aass"
    
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:weightSum="2"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="10dp"
    
    >
    
    <Button  
    android:id="@+id/ButtonSave"  
     android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:text="Save"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">  
</Button> 

    <Button  
    android:id="@+id/ButtonCancel"  
   android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:background="@drawable/custom_button"
         android:textColor="#ffffff"
         android:paddingTop="10dp"
        android:paddingBottom="10dp"
         android:layout_marginLeft="10dp"
        android:text="Cancel" >  
</Button> 
    
</LinearLayout>

    </LinearLayout>  
