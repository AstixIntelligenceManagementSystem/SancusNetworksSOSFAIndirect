<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:paddingTop="5dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Report Scope"
        android:background="@drawable/logo_background"
        android:padding="5dp"
        android:textColor="#FFFF4424"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:gravity="center"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Own Working"
        android:padding="4dp"
        android:id="@+id/rb_myReport"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Individual DSM"
        android:padding="4dp"
        android:id="@+id/rb_dsrReport"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:background="@drawable/spinner_boundary"
        android:id="@+id/spinner_dsrVisit"
        android:layout_height="wrap_content">
    </Spinner>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Territory"
        android:padding="4dp"
        android:id="@+id/rb_WholeReport"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distributor Scope"
        android:padding="4dp"
        android:id="@+id/rb_distrbtrScope"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:background="@drawable/spinner_boundary"
        android:id="@+id/spinner_distrbtrScope"
        android:layout_height="wrap_content">
    </Spinner>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="visible"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Proceed"
            android:textSize="14sp"
            android:id="@+id/btn_proceed"
            android:background="@drawable/btn_background"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:id="@+id/btn_cancel"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_background"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>