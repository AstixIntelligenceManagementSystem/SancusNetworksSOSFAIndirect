<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	
   
       android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="2dp"
		android:paddingRight="2dp"
		 android:paddingTop="3dp"
      android:paddingBottom="3dp"  
		android:descendantFocusability="afterDescendants" >
	<LinearLayout
	    android:id="@+id/ll_product_stock"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="5"
		android:gravity="center"
		>

		<TextView
			android:id="@+id/tvSkuName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="Product Name"
			 android:padding="1dp"
			 
			 android:textColor="#000000"
			 android:textSize="12sp"
			android:layout_weight="3"/>

		  <TextView  
  	       android:id="@+id/et_ProductMRP"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	      android:layout_marginLeft="8dp"
	      android:enabled="false"
	       android:padding="1dp"
	      android:textSize="12sp"
	      android:text="0.0"
	      android:textColor="#000000"
	      android:background="@drawable/edit_text_diable_bg_transprent"
	      android:visibility="invisible"
	        android:layout_weight="1"/>
	
		   <TextView 
	           android:id="@+id/txtVwRate"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:gravity="center"
	         android:enabled="false"
	         android:text="0"
	          android:padding="1dp"
	         android:textSize="12sp"
	          android:textColor="#000000"
	         android:visibility="gone"
	           android:layout_marginLeft="2dp"
	           android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	      
  	  <TextView  
  	       android:id="@+id/tvLine"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	      android:layout_marginLeft="2dp"
	      android:enabled="false"
	       android:padding="1dp"
	      android:textSize="12sp"
	      android:text="0"
	      android:textColor="#000000"
	      android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	       
 
  </LinearLayout>



	

	
	<LinearLayout 
	      android:id="@+id/ll_sample"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="1dp"
	    
	    android:weightSum="5">
	    
	    <TextView  
	         android:id="@+id/tvOrderQty"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	     android:padding="1dp"
	        android:textSize="12sp"
	        android:hint="O.Qty"
	        android:maxLength="4"
	        android:inputType="number"
	         android:textColor="#000000"
	      android:layout_marginLeft="2dp"
	     
	       android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	      <TextView 
	            android:id="@+id/tvFreeQty"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:gravity="center"
	           android:textSize="12sp"
	            android:padding="1dp"
	         android:textColor="#000000"
	         android:hint="F.Qty"
	         android:inputType="number"
	         android:maxLength="4"
	           android:layout_marginLeft="2dp"
	           android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	      
	        <TextView  
	            android:id="@+id/tvSampleQty"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	          android:layout_marginLeft="2dp"
	           android:padding="1dp"
	        android:singleLine="true"
	        android:gravity="center"
	          android:textSize="12sp"
	         android:textColor="#000000"
	         android:hint="S.Qty"
	         android:inputType="number"
	         android:maxLength="4"
	         android:visibility="gone"
	         android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	        <TextView 
	                 android:id="@+id/tvMRP"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	      	 android:text="MRP"
	      	 android:enabled="false"
	      	  android:padding="1dp"
	      	  android:singleLine="true"
	      	 android:gravity="center"
	      	   android:layout_marginLeft="2dp"
	      	     android:textSize="12sp"
	           android:textColor="#D42625"
	      	   android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	          
	           
	                <TextView 
	                    android:id="@+id/tvOrderVal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="O.Val"
	         android:padding="1dp"
	         android:singleLine="true"
	          android:textSize="12sp"
	         android:textColor="#D42625"
	          android:layout_marginLeft="2dp"
	        android:gravity="center"
	          android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	        
	                <TextView 
	               android:id="@+id/tvDisVal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="D.Val"
	         android:padding="1dp"
	         android:singleLine="true"
	          android:layout_marginLeft="2dp"
	        android:gravity="center"
	          android:textSize="12sp"
	         android:textColor="#D42625"
	          android:background="@drawable/edit_text_diable_bg_transprent"
	        android:layout_weight="1"/>
	          
	    
	    
	</LinearLayout>

	</LinearLayout>
