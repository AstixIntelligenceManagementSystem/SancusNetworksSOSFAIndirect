<ScrollView
       xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
       
       >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="56dp"
               
                 android:background="@drawable/custom_header_color">
				<ImageView
					android:id="@+id/btn_bck"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:src="@drawable/back_button_image"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
				<TextView
					android:id="@+id/order_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFFFFF"
					android:layout_toRightOf="@+id/backbutton"
					android:paddingLeft="10dp"
					android:layout_centerInParent="true"
					android:gravity="center_horizontal|left"
					android:shadowRadius="7"
					android:shadowDy="4"
					android:shadowDx="4"
					android:textStyle="bold"
					android:shadowColor="#80FFFFFF"
					android:textSize="18sp"
					android:text="Sales Performance Maximizer"/>

            <ImageView
                android:id="@+id/imgVw_logout"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
android:visibility="gone"
                android:src="@drawable/logout_new" />

            </RelativeLayout>
             <ImageView
			            android:id="@+id/mainImg"
			            android:layout_width="match_parent"
			            android:layout_height="160dp"
			            android:background="@drawable/banner1"  />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="3dp"
		android:layout_marginRight="3dp"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="3dp"


		>

	<RadioGroup
				        android:id="@+id/radioRoute"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        >

	                 <RadioButton
		                     android:id="@+id/radio0"
		                     android:layout_width="match_parent"
		                     android:layout_height="wrap_content"
		                     android:checked="true"
		                     android:layout_marginLeft="5dp"
		                     android:layout_marginRight="5dp"
		                     android:textColor="#000000"
		                     android:paddingTop="15dp"
						     android:paddingBottom="15dp"
		                     android:background="@drawable/custom_radiogroup_border"
		                     android:text="  Today Route : 2-Sep-2015"
		                     android:textSize="14dp" />
                 
 
			        <RadioButton
					          android:id="@+id/radio1"
					          android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:textSize="14dp"
						android:paddingTop="15dp"
						android:paddingBottom="15dp"
					          android:layout_marginLeft="5dp"
					          android:layout_marginRight="5dp"
					          android:textColor="#000000"
					         
					          android:background="@drawable/custom_radiogroup_border"
					          android:text="   Choose Different Route" />

       
 
    		</RadioGroup>
    
	               <TextView
		                    android:id="@+id/tv_Route_text"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textStyle="bold"
		                    android:layout_marginLeft="10dp"
		                    android:layout_marginTop="10dp"
		                    android:text="Selected Route" 
		                    android:textColor="#000000"  />
	             
    
                   <TextView
		                    android:id="@+id/tv_Route"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:text="No Route Available" 
		                    android:textColor="#000000"
		                    android:paddingTop="10dp"
		                    android:background="@drawable/custom_border"
		                    android:layout_margin="10dp"
		                    android:paddingBottom="10dp"
	
		                    android:gravity="center_horizontal" />
                   
                   
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

                   <Button
                       android:id="@+id/but_GetStore"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="1dp"
                       android:background="@drawable/custom_button"
                       android:paddingBottom="10dp"
                       android:layout_weight="2"
                       android:paddingTop="10dp"
                       android:text="Get Stores"
                       android:textColor="#ffffff" />
  

                </LinearLayout>
                
                 <Button
					        android:id="@+id/but_NoStoreVisit"
					        android:layout_height="wrap_content"
					        android:layout_width="match_parent"
					        android:background="@drawable/custom_button"
					        android:textColor="#ffffff"
					        android:text="No Store Visit today"
					        android:paddingTop="10dp"
					        android:paddingBottom="10dp"
					        android:layout_marginTop="10dp"
					        android:layout_marginLeft="10dp"
					        android:layout_marginRight="10dp"
					 android:visibility="gone"/>
   
                
                <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
					android:visibility="gone">
    </View>
   

        </LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:background="#000000"
		android:visibility="gone">
	</View>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_marginBottom="3dp"
				android:layout_marginTop="5dp"

				>

				<Button

					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:background="@drawable/custom_button"
					android:textColor="#ffffff"
					android:text="Distributor Stock"
					android:id="@+id/but_distribtrStock"
					android:paddingTop="6dp"
					android:textSize="14sp"
					android:paddingBottom="6dp"
					android:layout_marginTop="3dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:visibility="gone"/>

				<Button
					android:id="@+id/but_Invoice"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:background="@drawable/custom_button"
					android:textColor="#ffffff"
					android:text="Update Execution"
					android:paddingTop="6dp"
					android:textSize="14sp"
					android:paddingBottom="6dp"
					android:layout_weight="1"
					android:visibility="gone"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="10dp"
					android:layout_marginBottom="3dp"
					android:layout_marginRight="10dp"

					/>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="30dp">
			</View>


		</LinearLayout>

</ScrollView>
