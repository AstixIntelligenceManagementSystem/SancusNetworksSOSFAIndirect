<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="match_parent"
        android:layout_height="130dp"

        android:background="@drawable/menu_head_img"
        android:layout_below="@+id/bardd"
        />

    <Button android:id="@+id/butHome"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:text="Home"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"/>

    <Button android:id="@+id/butMarketVisit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:text="Market Visit"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"/>

    <Button android:id="@+id/butExecution"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:text="Execution"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btnSalesSummary"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_right2"
        android:textSize="14sp"
        android:text="Report" />
    <Button
        android:id="@+id/btnDistributorMap"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:drawableRight="@drawable/ic_right2"
        android:gravity="left|center_vertical"
        android:text="Distributor Map"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnDistributorStock"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:drawableRight="@drawable/ic_right2"
        android:gravity="left|center_vertical"
        android:text="Distributor Stock"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnDSRTrack"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:drawableRight="@drawable/ic_right2"
        android:gravity="left|center_vertical"
        android:text="DSM Track"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_forward"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:text="Upload Data" />

    <Button
        android:id="@+id/butn_refresh_data"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_forward"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:text="Refresh Complete Data"
        android:visibility="gone"/>

    <!-- <Button
         android:id="@+id/btnPhoneBill"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:background="@drawable/alert_text_background"
         android:textColor="#000000"
         android:gravity="left|center_vertical"
         android:drawableRight="@drawable/ic_right"
         android:textSize="13sp"
         android:text="Upload Phone Bill"
         android:visibility="gone" />-->

    <Button
        android:id="@+id/btnSummary"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:visibility="gone"
        android:drawableRight="@drawable/ic_forward"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:text="Summary Report"
        />

    <Button
        android:id="@+id/btnVersion"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:drawableRight="@drawable/ic_forward"
        android:gravity="left|center_vertical"
        android:text="Version No."
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btnFaqs"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_forward"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:text="FAQs" />
    <Button
        android:id="@+id/btnContact"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_forward"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:text="Contact Us"
        android:visibility="gone"/>


</LinearLayout>
