
                    <TableRow xmlns:android="http://schemas.android.com/apk/res/android" 
                        android:id="@+id/tblDynRow"
                        android:layout_margin="0.2dp"
                        android:minHeight="18dp" 
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tvProd"
                            android:layout_margin="0.2dp"
                            android:background="#90a3c1"
                            android:textSize="8sp"
                            android:layout_width="0dip"
                            android:layout_weight="2.8"
                            android:singleLine="false"
                            android:scrollHorizontally="true" 
                            android:layout_height="fill_parent"/>

                        

                        <EditText
                            android:id="@+id/tvRate"
                            android:layout_margin="0.2dp"
                            android:background="#90a3c1"
                            android:textSize="8sp"
                            android:layout_width="0dip"
                            android:layout_weight="1.5"
                            android:singleLine="true"
                            android:enabled="false"
                            android:inputType="number"
                            android:maxLength="5"
                            android:gravity="center_horizontal|center_vertical"
                            android:scrollHorizontally="true" 
                            android:layout_height="fill_parent"/>

                       

                        <TextView
                            android:id="@+id/etOrderQty"
                            android:layout_margin="0.2dp"
                            android:background="#90a3c1"
                            android:textSize="8sp"
                           android:layout_width="0dip"
                            android:layout_weight="1.3"
                            android:singleLine="true"
                            android:inputType="number"
                           android:maxLength="3"
                            android:gravity="center_horizontal|center_vertical"
                             android:scrollHorizontally="true"
                             android:layout_height="fill_parent" />

                        <EditText
                            android:id="@+id/etDeliverValue"
                            android:layout_margin="0.2dp"
                            android:background="#d8e2ee"
                            android:textSize="8sp"
                           android:layout_width="0dip"
                            android:layout_weight="1.3"
                            android:singleLine="true"
                            android:inputType="number"
                           android:maxLength="3"
                            android:gravity="center_horizontal|center_vertical"
                            android:scrollHorizontally="true"
                            android:layout_height="fill_parent" />
                        <EditText
                            android:id="@+id/tvFreeQty"
                            android:layout_margin="0.2dp"
                            android:background="#d8e2ee"
                           android:inputType="number"
                           android:maxLength="3"
                            android:textSize="8sp"
                           android:layout_width="0dip"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_weight="1.3"
                           android:layout_height="fill_parent" />
                        
                        <EditText
                            android:id="@+id/tvDiscountVal"
                            android:layout_margin="0.2dp"
                            android:background="#d8e2ee"
                           android:inputType="numberDecimal"
                           android:maxLength="5"
                            android:textSize="8sp"
                           android:layout_width="0dip"
                            android:layout_weight="1.3"
                            android:gravity="center_horizontal|center_vertical"
                           android:layout_height="fill_parent" />
                    </TableRow>