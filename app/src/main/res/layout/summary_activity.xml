<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="#0738a9"

        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText" >
        <TextView
            android:id="@+id/tv_SOName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="17sp"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/so_name"/>

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:src="@drawable/logout30"


            android:textSize="15sp" />

        <!-- app:titleTextAppearance using for custom title size -->

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FF3958C9"
        android:orientation="horizontal"
        >
        <TextView

        android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:text="@string/last_refresh_time"
            android:visibility="visible"
            android:textStyle="bold"
        android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_ServerLastRefreshTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text=""
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView android:layout_width="match_parent"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="70dp"
        android:src="@drawable/rslp_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="10"
        android:background="@drawable/center_boundary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"


            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/total_status"
            android:textColor="#0000ff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#FF0345BF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:textSize="10sp"
                android:gravity="center"
                android:padding="2dp"
                android:text="DSR"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/total_stores"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/approved"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/rejected"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/remap"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/pending"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:id="@+id/parentOfAllDynamicData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/erreorSectionParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#990064ef"
            android:orientation="vertical"

            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/erroricon" />

            <TextView
                android:id="@+id/errorMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:paddingBottom="10dp"

                android:text=""

                android:textColor="#fff"
                android:textSize="17sp"

                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="#4621cc"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/TodayStoreAddedParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#FF0345BF"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/total_stores_added_by_me"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ToadyStoreSOCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:background="@drawable/custom_textview_bndry"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/ln_InfoSection"
        android:background="#FF0345BF"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/erroricon"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:padding="4dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"

            android:id="@+id/txt_ln_InfoSectionDetails"

            android:textStyle="bold"
            android:textSize="11sp"

            android:text=""/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/logo_background"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginBottom="5dp"
            android:textColor="#ff2436"
            android:visibility="visible"
            android:id="@+id/btn_Proceed"
            android:textStyle="bold"
            android:text="@string/txtProceed"
            />


    </LinearLayout>



</LinearLayout>
